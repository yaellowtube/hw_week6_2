<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @post.user.email %>
</p>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<h2>Replies</h2>
<% @post.replies.each do |reply| %>
 <p>
   <strong>User:</strong>
   <%= reply.reply_user %>
 </p>

  <p>
    <strong>Reply:</strong>
    <%= reply.body %>
  </p>
<% end %>

<h2>Reply:</h2>
<%= form_for([@post, @post.replies.build]) do |f| %>
  <p>
    <%= f.label :reply_user %><br>
    <%= f.text_field :reply_user %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
